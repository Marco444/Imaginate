val earth : {setting: "./earth.png"}
val mars : {setting: "./mars.png"}
val jupiter : {setting: "./jupiter.png"}
val saturn : {setting: "./saturn.png"}
val neptune : {setting: "./neptune.png"}

val cargo : {spaceship: "./cargoSpaceship.png"}
val exploration : {spaceship: "./explorationSpaceship.png"}
val colony : {spaceship: "./colonySpaceship.png"}

val scientists : {characters: "./scientists.png"}
val engineers : {characters: "./engineers.png"}
val pilots : {characters: "./pilots.png"}

val researchStation : {spaceStation: "./researchStation.png"}
val fuelStation : {spaceStation: "./fuelStation.png"}
val colonyStation : {spaceStation: "./colonyStation.png"}

val meteorShower : {event: "./meteorShower.png"}
val solarEclipse : {event: "./solarEclipse.png"}
val comet : {event: "./comet.png"}

def setLocation(location):
    .addBackground(location.setting)

def addSpaceship(spaceship):
    .addFlavour(spaceship.spaceship)

def addCharacters(characters):
    .addFlavour(characters.characters)

def addSpaceStation(spaceStation):
    .addFlavour(spaceStation.spaceStation)

def addEvent(event):
    .addFlavour(event.event)

def exploreSpace(setting, spaceship, characters, spaceStation, event):
    .setLocation(setting)
    .addSpaceship(spaceship)
    .addCharacters(characters)
    .addSpaceStation(spaceStation)
    .addEvent(event)

Imaginate
    .forEachFocus(earth, mars, jupiter, saturn, neptune)
    .exploreSpace(earth, cargo, scientists, researchStation, meteorShower)
    .exploreSpace(mars, exploration, engineers, fuelStation, solarEclipse)
    .exploreSpace(jupiter, colony, pilots, colonyStation, comet)
    .exploreSpace(saturn, cargo, scientists, researchStation, meteorShower)
    .exploreSpace(neptune, exploration, engineers, fuelStation, solarEclipse)
    .renderAll()

Imaginate
    .forEachFocus(earth, mars, jupiter, saturn, neptune)
    .exploreSpace(neptune, exploration, engineers, fuelStation, solarEclipse)
    .render()
